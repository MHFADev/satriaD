// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Order {
  id        Int      @id @default(autoincrement())
  name      String
  whatsapp  String
  service   String
  deadline  String?
  detail    String
  createdAt DateTime @default(now())
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  category    String   // e.g., "Graphic Design", "Assignment"
  imageUrl    String
  description String?
  createdAt   DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
